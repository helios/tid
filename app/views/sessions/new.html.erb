
<div class="col-sm-1"></div>
<h1>Log in</h1>
<br>
<br>

<%= form_tag sessions_path, :class => "form-horizontal"  do %>
 <div class="form-group">
 	<div class="col-sm-1">
    <%= label_tag :email %>
      </div>
    <%= text_field_tag :email, params[:email] %>
  </div>
 <div class="form-group">
 	<div class="col-sm-1">
    <%= label_tag :password %>
   </div>
    <%= password_field_tag :password %>
  </div>
  <div class="actions"><div class="col-sm-1"></div>
  	<%= submit_tag "Log in", class: "btn btn-large btn-primary"%></div>
<% end %>

